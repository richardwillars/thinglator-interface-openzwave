{
    "root": true,
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [2, 4],
        "semi": 2,
        "no-restricted-syntax": 2,
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "newline-per-chained-call": 0,
        "comma-dangle": ['error','never'],
        "max-len": ['error',120],
        "class-methods-use-this": 0,
        "no-console": 0,
        "jsx-a11y/img-has-alt": [0]
    }
}
